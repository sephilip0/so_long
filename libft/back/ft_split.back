#include "libft.h"

int	ft_countwords(char const *s, char c)
{
	int	i;
	int	in_word;
	int	count;
	char	*str;
	
	str = (char *)s;
	count = 0;
	i = 0;
	in_word = 0;
	while(str[i])
	{
		if(str[i] == c)
		{
			if(in_word)
				in_word = 0;
		}
		else if(!in_word)
		{
			count++;
			in_word = 1;
		}
		i++;
	}
	return (count);
}

char	*ft_cutter(char const *s, char c, char index)
{
	char	*p;
	char	*res;
	int	len;
	int	j;
	int	i;

	len = 0;
	p = (char *)s;
	i = index;
	while (p[index] && p[index] != c)
	{
		index++;
		len++;
	}
	res = (char *)malloc((len + 1) * sizeof(char));
	if (!res)
		return (NULL);
	j = 0;
	while (j < len)
	{
		res[j] = p[i];
		i++;
		j++;
	}
	res[len] = 0;
	return (res);
}
