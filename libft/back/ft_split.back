char	**ft_split(char const *s, char c)
{
	int	i;
	int	j;
	char	*p;
	char	**split;

	p = (char *)s;
	if (!p || !(split = malloc((ft_countwords(s, c) + 1) * sizeof(char *))))
		return (0);
	i = 0;
	j = 0;
	while (p[i])
	{
		if (p[i] != c)
		{
			split[j] = ft_cutter(s, c, i);
			j++;
			//if not?
			while (p[i] && p[i] != c)
				i++;
		}
		else
			i++;
	}
	split[j] = 0;
	return (split);
}
